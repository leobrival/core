{
	"name": "topographic-studio-core",
	"version": "0.0.0",
	"private": true,
	"description": "Shared packages for Topographic Studio projects",
	"workspaces": ["packages/*", "apps/*"],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"lint:fix": "turbo run lint:fix",
		"typecheck": "turbo run typecheck",
		"test": "turbo run test",
		"changeset": "changeset",
		"version-packages": "changeset version",
		"release": "turbo run build --filter=./packages/* && changeset publish"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.5",
		"@changesets/cli": "^2.27.0",
		"turbo": "^2.3.3",
		"typescript": "^5.7.2"
	},
	"packageManager": "bun@1.1.42",
	"engines": {
		"node": ">=20.0.0",
		"bun": ">=1.0.0"
	}
}
